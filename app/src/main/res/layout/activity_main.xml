<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:id="@+id/app_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/answer2"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="106dp"
        android:background="@drawable/question_custom"
        android:elevation="20dp"
        android:src="@drawable/question_custom"
        android:text="@string/question"
        android:textAlignment="center"
        android:textColor="@color/outrun_pink"
        android:textSize="40sp"
        android:typeface="sans"
        android:visibility="visible" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/answer2"
        android:layout_alignStart="@+id/flashcard_question"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="106dp"
        android:background="@drawable/answer_toggle"
        android:elevation="20dp"
        android:src="@drawable/answer_toggle"
        android:text="@string/answer"
        android:textAlignment="center"
        android:textColor="@color/answer_color"
        android:textSize="40sp"
        android:typeface="sans"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/answer1"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/flashcard_question"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="-1dp"
        android:layout_marginBottom="270dp"
        android:background="@drawable/answers_background"
        android:singleLine="true"
        android:text="@string/answer1"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp"
        android:textStyle="normal"
        android:textColor="@color/answer_color"/>

    <TextView
        android:id="@+id/answer2"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/answer1"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="201dp"
        android:background="@drawable/answers_background"
        android:singleLine="true"
        android:text="@string/answer2"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp"
        android:textStyle="normal"
        android:textColor="@color/answer_color"/>

    <TextView
        android:id="@+id/answer3"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/answer1"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="131dp"
        android:background="@drawable/answers_background"
        android:singleLine="true"
        android:text="@string/answer3"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp"
        android:textStyle="normal"
        android:textColor="@color/answer_color"/>

    <ImageView
        android:id="@+id/visible_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="73dp"
        android:contentDescription="@string/visible"
        android:src="@drawable/visible_eye"
        android:visibility="visible"
        android:tint="@color/outrun_pink"/>

    <ImageView
        android:id="@+id/invisible_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/visible_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="73dp"
        android:contentDescription="@string/invisible"
        android:src="@drawable/eye_invisible"
        android:visibility="invisible"
        android:tint="@color/outrun_pink"/>

    <ImageView
        android:id="@+id/edit_button"
        android:layout_width="74dp"
        android:layout_height="78dp"
        android:layout_alignStart="@+id/flashcard_question"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="0dp"
        android:contentDescription="@string/btn_edit"
        app:srcCompat="@drawable/btn_edit"
        android:tint="@color/outrun_pink"/>

    <ImageView
        android:id="@+id/add_button"
        android:layout_width="74dp"
        android:layout_height="78dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="0dp"
        android:contentDescription="@string/add_card"
        app:srcCompat="@drawable/add_card"
        android:tint="@color/outrun_pink"/>

    <ImageView
        android:id="@+id/next_button"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_alignEnd="@+id/add_button"
        android:layout_alignParentTop="true"
        android:layout_marginTop="541dp"
        android:layout_marginEnd="158dp"
        android:contentDescription="@string/next_card"
        app:srcCompat="@drawable/next_card"
        android:tint="@color/outrun_pink"/>
</RelativeLayout>